@model IEnumerable<GoCoffeeTea.Models.ViewModels.DailySalesViewModel>

@{
    ViewData["Title"] = "Báo cáo Doanh thu theo Ngày";
    // Tính tổng doanh thu và tổng số đơn hàng
    var totalSales = Model.Sum(d => d.TotalAmount);
    var totalOrders = Model.Sum(d => d.OrderCount);
}

<h2 class="mb-4 text-primary">📈 Báo cáo Doanh thu theo Ngày</h2>
<hr />

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card bg-success text-white shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Tổng Doanh thu Đã Bán</h5>
                <p class="card-text fs-4">@totalSales.ToString("N0") VNĐ</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-info text-white shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Tổng Số Đơn hàng</h5>
                <p class="card-text fs-4">@totalOrders đơn hàng</p>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-secondary text-white">
        <h5>Chi tiết Doanh thu</h5>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Ngày</th>
                    <th>Số lượng Đơn hàng</th>
                    <th>Tổng Doanh thu (VNĐ)</th>
                    <th>Doanh thu Trung bình/Đơn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    decimal averagePerOrder = item.OrderCount > 0 ? item.TotalAmount / item.OrderCount : 0;

                    <tr>
                        <td><strong>@item.Date.ToString("dd/MM/yyyy")</strong></td>
                        <td>@item.OrderCount</td>
                        <td>
                            <strong class="text-success">@item.TotalAmount.ToString("N0")</strong>
                        </td>
                        <td>
                            @averagePerOrder.ToString("N0") VNĐ
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-4">
    <a asp-area="Admin" asp-controller="Report" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại Dashboard
    </a>
</div>