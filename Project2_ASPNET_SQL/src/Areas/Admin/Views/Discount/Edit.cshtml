@model GoCoffeeTea.Models.Discount

@{
    ViewData["Title"] = "Chỉnh sửa Khuyến mãi";
}

<h2 class="mb-4 text-info">✏️ Chỉnh sửa Mã khuyến mãi: @Model.Code</h2>
<hr />

<div class="row">
    <div class="col-md-7">
        <div class="card shadow-sm p-4">
            <form asp-area="Admin" asp-controller="Discount" asp-action="Edit" asp-route-id="@Model.DiscountID" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="DiscountID" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Code" class="form-label">Mã Code (*)</label>
                        <input asp-for="Code" class="form-control" readonly />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label">Tên Chương trình (*)</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Type" class="form-label">Loại giảm giá (*)</label>
                        <select asp-for="Type" class="form-select" required>
                            <option value="Percent">Phần trăm (%)</option>
                            <option value="Fixed">Giá trị cố định (VNĐ)</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Value" class="form-label">Giá trị (*)</label>
                        <input asp-for="Value" class="form-control" type="number" step="0.01" min="0" required />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="MinOrderAmount" class="form-label">Đơn tối thiểu</label>
                        <input asp-for="MinOrderAmount" class="form-control" type="number" step="1000" min="0" />
                        <span asp-validation-for="MinOrderAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StartDate" class="form-label">Ngày bắt đầu (*)</label>
                        <input asp-for="StartDate" class="form-control" type="date" value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="EndDate" class="form-label">Ngày kết thúc (*)</label>
                        <input asp-for="EndDate" class="form-control" type="date" value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive">
                        @Html.DisplayNameFor(model => model.IsActive) (Kích hoạt/Khóa mã)
                    </label>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-info me-2 text-white">
                        <i class="fas fa-save"></i> Lưu Thay đổi
                    </button>
                    <a asp-area="Admin" asp-controller="Discount" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại Danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}