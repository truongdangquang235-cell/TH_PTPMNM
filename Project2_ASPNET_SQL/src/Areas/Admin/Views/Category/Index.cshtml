@model IEnumerable<GoCoffeeTea.Models.Category>

@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<h2 class="mb-4 text-primary">⚙️ Quản lý Danh mục Sản phẩm</h2>
<hr />

<p>
    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Thêm Danh mục Mới
    </a>
</p>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th>
                        Thao tác
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(!item.IsActive ? "table-secondary text-muted" : "")">
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Khóa</span>
                            }
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryID"
                               class="btn btn-sm btn-info text-white me-2" title="Chỉnh sửa">
                                <i class="fas fa-edit"></i> Sửa
                            </a>

                            @if (item.IsActive)
                            {
                                <form asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryID" method="post" class="d-inline"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn KHÓA danh mục này? Điều này sẽ ẩn tất cả sản phẩm liên quan.');">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Khóa">
                                        <i class="fas fa-lock"></i> Khóa
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-area="Admin" asp-controller="Category" asp-action="Unlock" asp-route-id="@item.CategoryID" method="post" class="d-inline"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn MỞ KHÓA danh mục này?');">
                                    <button type="submit" class="btn btn-sm btn-success" title="Mở Khóa">
                                        <i class="fas fa-unlock"></i> Mở Khóa
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>