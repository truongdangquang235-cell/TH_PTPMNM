@model IEnumerable<GoCoffeeTea.Models.Material>

@{
    ViewData["Title"] = "Quản lý Nguyên vật liệu thô";
}

<h2 class="mb-4 text-primary">🌱 Quản lý Nguyên vật liệu thô</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Thêm Nguyên vật liệu Mới
    </a>
</p>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên Nguyên vật liệu</th>
                    <th>Đơn vị tính</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(!item.IsActive ? "table-secondary text-muted" : "")">
                        <td>@item.MaterialID</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Đã ẩn</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MaterialID" class="btn btn-sm btn-info text-white me-2" title="Chỉnh sửa">
                                <i class="fas fa-edit"></i> Sửa
                            </a>

                            @if (item.IsActive)
                            {
                                <form asp-action="Delete" asp-route-id="@item.MaterialID" method="post" class="d-inline"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn ẩn nguyên vật liệu này?');">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Ẩn/Xóa mềm">
                                        <i class="fas fa-eye-slash"></i> Ẩn
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Reactivate" asp-route-id="@item.MaterialID" method="post" class="d-inline"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn MỞ LẠI nguyên vật liệu này?');">
                                    <button type="submit" class="btn btn-sm btn-success" title="Mở lại">
                                        <i class="fas fa-undo"></i> Mở lại
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>