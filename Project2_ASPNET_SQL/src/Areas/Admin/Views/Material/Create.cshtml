@model GoCoffeeTea.Models.Material

@{
    ViewData["Title"] = "Thêm Nguyên vật liệu Mới";
}

<h2 class="mb-4 text-primary">➕ Thêm Nguyên vật liệu Mới</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Tên Nguyên vật liệu (*)</label>
                    <input asp-for="Name" class="form-control" placeholder="Ví dụ: Cà phê hạt Arabica" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Unit" class="form-label">Đơn vị tính (*)</label>
                    <input asp-for="Unit" class="form-control" placeholder="Ví dụ: g, ml, kg, lít" />
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-save"></i> Tạo Nguyên vật liệu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại Danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}