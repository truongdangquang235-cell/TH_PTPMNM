@model GoCoffeeTea.Models.MaterialInventory

@{
    ViewData["Title"] = "Điều chỉnh Tồn kho";
}

<h2 class="mb-4 text-warning">✏️ Điều chỉnh Tồn kho: @Model.Material.Name</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="MaterialInventoryID" />
                <input type="hidden" asp-for="MaterialID" />

                <div class="mb-3">
                    <label class="form-label">Nguyên vật liệu</label>
                    <p class="form-control-static">
                        <strong>@Model.Material.Name</strong> (Đơn vị: @Model.Material.Unit)
                    </p>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tồn kho Hiện tại</label>
                    <p class="form-control-static fw-bold text-success">
                        @Model.Quantity.ToString("N2") @Model.Material.Unit
                    </p>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Nhập Số lượng MỚI (*)</label>
                    <input asp-for="Quantity" class="form-control form-control-lg" type="number" step="any" min="0" />
                    <small class="form-text text-muted">
                        Nhập tổng số lượng tồn kho mới (Ví dụ: Nếu có 50 và nhập thêm 10, bạn phải nhập 60).
                    </small>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-warning me-2 text-white">
                        <i class="fas fa-save"></i> Lưu Cập nhật
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}