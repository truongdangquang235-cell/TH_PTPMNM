<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ADMIN GoCoffeeTea</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Tùy chỉnh CSS cho Admin Sidebar */
        body {
            background-color: #f4f6f9;
        }

        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background-color: #343a40; /* Màu nền tối */
            color: #fff;
            padding-top: 20px;
            z-index: 1000;
        }

            .sidebar .nav-link {
                color: #ccc;
                padding: 10px 15px;
            }

                .sidebar .nav-link.active, .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: #007bff; /* Màu chủ đạo */
                }

        .main-content {
            margin-left: 250px; /* Bằng chiều rộng sidebar */
            padding: 20px;
        }
    </style>
</head>
<body>

    <div class="sidebar d-flex flex-column p-3">
        <h4 class="text-warning mb-4 text-center">ADMIN PANEL</h4>
        <nav class="nav nav-pills flex-column">

            <a class="nav-link" asp-area="Admin" asp-controller="Report" asp-action="Index">
                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
            </a>
            <hr class="text-white-50">

            <h6 class="text-muted text-uppercase mt-2 mb-1 ps-3">Quản lý Dữ liệu</h6>

            <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">
                <i class="fas fa-sitemap me-2"></i> Danh mục
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">
                <i class="fas fa-coffee me-2"></i> Sản phẩm
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Material" asp-action="Index">
                <i class="fas fa-seedling me-2"></i> Nguyên vật liệu
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Discount" asp-action="Index">
                <i class="fas fa-gift me-2"></i> Khuyến mãi
            </a>

            <h6 class="text-muted text-uppercase mt-3 mb-1 ps-3">Vận hành & Nhân sự</h6>

            <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">
                <i class="fas fa-receipt me-2"></i> Đơn hàng
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Inventory" asp-action="Index">
                <i class="fas fa-warehouse me-2"></i> Tồn kho
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="Customer" asp-action="Index">
                <i class="fas fa-users me-2"></i> Khách hàng
            </a>
            <a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="Index">
                <i class="fas fa-user-tie me-2"></i> Nhân viên
            </a>

            <hr class="text-white-50">

            @if (User.Identity.IsAuthenticated)
            {
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="mt-auto">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất (@User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value)
                    </button>
                </form>
            }

        </nav>
    </div>

    <div class="main-content">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted mt-5">
            <div class="container-fluid text-center">
                &copy; @DateTime.Now.Year - GoCoffeeTea Admin
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6J7tV8b9Xw70v2K+9F8l6W9zL4a7hL4b0a7i0r8i9c6a6b8f9e" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>