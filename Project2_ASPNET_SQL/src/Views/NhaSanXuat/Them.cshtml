@model WebApplication1.Models.Nhasanxuat

@{
    ViewData["Title"] = "Thêm Nhà Sản Xuất";
}

<h1>Thêm Nhà Sản Xuất</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Them">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Mansx" class="control-label"></label>
                <input asp-for="Mansx" class="form-control" />
                <span asp-validation-for="Mansx" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tennsx" class="control-label"></label>
                <input asp-for="Tennsx" class="form-control" />
                <span asp-validation-for="Tennsx" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>