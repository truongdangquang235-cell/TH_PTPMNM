@{
    // Quan trọng khi dùng AJAX: Đảm bảo chỉ nội dung View được tải
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quản Lý Khách Hàng</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #dee2e6; /* Màu viền Bootstrap */
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f8f9fa;
            text-align: center;
            font-weight: bold;
        }

        .add-button {
            padding: 10px 15px;
            background-color: #007bff; /* Màu xanh dương */
            color: white;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 10px;
        }

            .add-button:hover {
                background-color: #0056b3;
            }

        .action-links a {
            margin-right: 5px;
            text-decoration: none;
        }
    </style>
</head>
<body>

    <h2>👥 Danh Sách Khách Hàng</h2>
    <hr />

    <p>
        <a href="@Url.Action("Them")" class="add-button">➕ Thêm mới Khách Hàng</a>
    </p>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th style="width: 10%;">Mã KH</th>
                <th style="width: 20%;">Tên KH</th>
                <th style="width: 10%;">Năm Sinh</th>
                <th style="width: 8%;">Phái</th>
                <th style="width: 15%;">Điện Thoại</th>
                <th style="width: 25%;">Địa Chỉ</th>
                <th style="width: 12%; text-align: center;">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @{
                // Lấy danh sách từ ViewBag.kh (như đã gán trong Controller)
                var danhSachKhachHang = ViewBag.kh as IEnumerable<dynamic>;

                if (danhSachKhachHang != null && danhSachKhachHang.Any())
                {
                    foreach (var item in danhSachKhachHang)
                    {
                        <tr>
                            <td style="text-align: center;">@item.Makh</td>
                            <td>@item.Tenkh</td>
                            <td style="text-align: center;">@item.Namsinh</td>
                            <td style="text-align: center;">@(item.Phai != null ? (item.Phai ? "Nam" : "Nữ") : "Không rõ")</td>
                            <td>@item.Dienthoai</td>
                            <td>@item.Diachi</td>
                            <td class="action-links" style="text-align: center;">
                                <a href="@Url.Action("Sua", new { id = item.Makh })" class="btn btn-sm btn-primary">Sửa</a>
                                <a href="@Url.Action("ChiTiet", new { id = item.Makh })" class="btn btn-sm btn-info">Chi Tiết</a>
                                <a href="@Url.Action("Xoa", new { id = item.Makh })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng @item.Tenkh không?');">Xóa</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" style="text-align: center;">Không có dữ liệu khách hàng nào.</td>
                    </tr>
                }
            }
        </tbody>
    </table>

</body>
</html>