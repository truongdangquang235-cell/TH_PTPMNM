@{
    // Quan trọng khi dùng AJAX: Đảm bảo chỉ nội dung View được tải
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quản Lý Hàng Hóa</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #dee2e6; /* Màu viền Bootstrap */
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f8f9fa; /* Màu nền tiêu đề */
            text-align: center;
            font-weight: bold;
        }

        .action-links a {
            margin-right: 5px; /* Giảm khoảng cách giữa các nút */
        }
    </style>
</head>
<body>

    <h2>📦 Danh Sách Hàng Hóa</h2>
    <hr />

    <p>
        <a href="@Url.Action("Them")" class="add-button">➕ Thêm mới Hàng Hóa</a>
    </p>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th style="width: 8%;">Mã Hàng</th>
                <th style="width: 10%;">Hình Ảnh</th>
                <th style="width: 25%;">Tên Hàng</th>
                <th style="width: 10%;">ĐVT</th>
                <th style="width: 12%;">Đơn Giá</th>
                <th style="width: 8%;">Mã Loại</th>
                <th style="width: 8%;">Mã NSX</th>
                <th style="width: 19%; text-align: center;">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @{
                // Lấy danh sách từ ViewBag.hh (như đã gán trong Controller)
                var danhSachHangHoa = ViewBag.hh as IEnumerable<dynamic>;

                if (danhSachHangHoa != null && danhSachHangHoa.Any())
                {
                    // Cần khai báo using System.Globalization trong Controller hoặc _ViewImports
                    var culture = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");

                    foreach (var item in danhSachHangHoa)
                    {
                        <tr>
                            <td style="text-align: center;">@item.Mahang</td>
                            <td style="text-align: center;">
                                @if (!string.IsNullOrEmpty(item.Hinh))
                                {
                                    // Giả định hình ảnh được lưu trong thư mục wwwroot/images/products/
                                    // <img src="~/images/products/@item.Hinh" alt="@item.Tenhang" class="product-image" />
                                }
                                else
                                {
                                    <span>(Không ảnh)</span>
                                }
                            </td>
                            <td>@item.Tenhang</td>
                            <td style="text-align: center;">@item.Donvitinh</td>
                            <td style="text-align: right;">
                                @if (item.Dongia > 0)
                                {
                                    @item.Dongia.ToString("C0", culture) @* Định dạng tiền tệ, vd: 10.000₫ *@
                                }
                                else
                                {
                                    <span>0₫</span>
                                }
                            </td>
                            <td style="text-align: center;">@item.Maloai</td>
                            <td style="text-align: center;">@item.Mansx</td>
                            <td class="action-links" style="text-align: center;">
                                <a href="@Url.Action("Sua", new { id = item.Mahang })" class="btn btn-sm btn-primary">Sửa</a>
                                <a href="@Url.Action("ChiTiet", new { id = item.Mahang })" class="btn btn-sm btn-info">Chi Tiết</a>
                                <a href="@Url.Action("Xoa", new { id = item.Mahang })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa hàng hóa @item.Tenhang không?');">Xóa</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" style="text-align: center;">Không có dữ liệu hàng hóa nào.</td>
                    </tr>
                }
            }
        </tbody>
    </table>

</body>
</html>